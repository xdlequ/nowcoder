<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.project.dao.QuestionDao">
    <sql id="table">question</sql>
    <sql id="selectField">id, title, content, comment_count,created_date,user_id</sql>
    <select id="selectLatestQuestions" resultType="com.project.entity.Question">
        SELECT <include refid="selectField"/>
        FROM <include refid="table"/>

        <if test="userId!=0">
        WHERE userId=#{userId}
        </if>
        ORDER BY id DESC
        LIMIT #{offset},#{limit}
    </select>
</mapper>